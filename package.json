  "engines": {
    "node": ">=12.13.1",
    "npm": ">=6.14.8"
  },
  "scripts": {
    "analyze": "cd apps/nextjs/app && npm run analyze",
    "build": "npm run stop && npm run destroy && npm run start:clean",
    "start": "docker-compose up",
    "start:clean": "docker-compose up --build",
    "stop": "docker-compose stop",
    "storybook": "docker exec -it concourse_nextjs_1 npm run storybook",
    "storybook:build": "docker exec -it concourse_nextjs_1 npm run storybook:build",
    "storybook:publish": "cd apps/nextjs/app && npm run storybook:publish",
    "storybook:upgrade": "docker exec -it concourse_nextjs_1 npx sb@latest upgrade",
    "test": "npm run test:nextjs",
    "test:coverage": "npm run test:nextjs:coverage",
    "test:watch": "npm run test:nextjs:watch",
    "test:nextjs": "docker exec -it concourse_nextjs_1 npm test",
    "test:nextjs:coverage": "docker exec -it concourse_nextjs_1 npm run test:coverage",
    "test:nextjs:watch": "docker exec -it concourse_nextjs_1 npm run test:watchAll",
    "test:e2e": "npm run test:e2e:cypress",
    "test:e2e:flaps": "npm run test:e2e:cypress:flaps",
    "test:e2e:open": "npm run test:e2e:cypress:open",
    "test:e2e:cypress": "docker-compose up -d --no-deps --build cypress",
    "test:e2e:cypress:flaps": "npm run test:e2e:cypress && docker-compose run cypress scripts/test-for-flaps.sh",
    "test:e2e:cypress:open": "cd apps/cypress && npm start",
    "destroy": "docker-compose rm -f -v",
    "destroy:global": "docker system prune -f --volumes && docker image prune -a -f",
    "nextjs-blog:build": "cd apps/nextjs-blog && npm run build",
    "nextjs-blog:start": "cd apps/nextjs-blog && npm run start",
    "nextjs-blog:start:clean": "cd apps/nextjs-blog && npm run start:clean",
    "nextjs-blog:stop": "cd apps/nextjs-blog && npm run stop",
    "nextjs-blog:destroy": "cd apps/nextjs-blog && npm run destroy",
    "nextjs-blog:destroy:global": "cd apps/nextjs-blog && npm run destroy:global",
    "hasura-spike:build": "cd __reference__/hasura-spike && npm run build",
    "hasura-spike:start": "cd __reference__/hasura-spike && npm run start",
    "hasura-spike:start:clean": "cd __reference__/hasura-spike && npm run start:clean",
    "hasura-spike:stop": "cd __reference__/hasura-spike && npm run stop",
    "hasura-spike:db:migrate": "cd __reference__/hasura-spike && npm run db:migrate",
    "hasura-spike:destroy": "cd __reference__/hasura-spike && npm run destroy",
    "hasura-spike:destroy:global": "cd __reference__/hasura-spike && npm run destroy:global"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheRobBrennan/concourse.git"
  },
  "bugs": {
    "url": "https://github.com/TheRobBrennan/concourse/issues"
  },
  "homepage": "https://github.com/TheRobBrennan/concourse#readme"
}
